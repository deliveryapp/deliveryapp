<h1>Dishes</h1>
<h2>Add new dish:</h2>
<div class="form">
    <label for="name">Name:</label>
    <br/>
    <input type="text" id="name"/>
    <br/>

    <label for="img_path">Image path:</label>
    <br/>
    <input type="text" id="img_path"/>
    <br/>

    <label for="price">Price:</label>
    <br/>
    <input type="text" id="price"/>
    <br/>

    <label for="weight">Weight:</label>
    <br/>
    <input type="text" id="weight"/>
    <br/>

    <label for="description">Description</label>
    <br/>
    <textarea id="description"></textarea>
    <br/>

    <label for="category">Category</label>
    <br/>
    <select id="category">
        <option value="soup">Soup</option>
        <option value="shit">Shit</option>
        <option value="pizza">Pizza</option>
    </select>
    <br/>

    <input type="submit" id="submit"/>
</div>

<h2>Edit existing dish:</h2>
<div class="form-edit">
    <label for="id-edit">ID:</label>
    <br/>
    <input type="text" id="id-edit"/>
    <br/>
    <label for="name-edit">Name:</label>
    <br/>
    <input type="text" id="name-edit"/>
    <br/>
    <label for="description-edit">Description</label>
    <br/>
    <textarea id="description-edit"></textarea>
    <br/>
    <input type="submit" id="submit-edit"/>
</div>


<h2>Remove existing dish:</h2>
<div class="form-remove">
    <label for="id-remove">ID:</label>
    <br/>
    <input type="text" id="id-remove"/>
    <br/>
    <input type="submit" id="submit-remove"/>
</div>

<script>
    /**
     * Stub for REST API testing
     */
    $(document).ready(function () {
        $('#submit').on('click', function () {
            var model = {
                name: $('#name').val(),
                description: $('#description').val(),
                image_path: $('#img_path').val(),
                weight: $('#weight').val(),
                price: $('#price').val(),
                category: $('#category').val()
            };
            $.ajax({
                method: 'POST',
                url: '/dishes',
                data: model
            }).done(function (response) {
                console.log(response);
            });
        });

        $('#submit-edit').on('click', function () {
            var model = {
                id: $('#id-edit').val(),
                name: $('#name-edit').val(),
                description: $('#description-edit').val()
            };
            $.ajax({
                method: 'PUT',
                url: '/dishes/' + model.id,
                data: model
            }).done(function (response) {
                console.log(response);
            });
        });

        $('#submit-remove').on('click', function () {
            var model = {
                id: $('#id-remove').val()
            };
            $.ajax({
                method: 'DELETE',
                url: '/dishes/' + model.id
            }).done(function (response) {
                console.log(response);
            });
        });
    });
</script>